{
  "name": "Stache it",
  "version": "1.0",
  "manifest_version": 2,
  
  "description": "If you have a question and must StacheIt, I call on you to shave it for later.",
  
  "browser_action": {
    "default_icon": "media/icon-default.png",
    "default_popup": "popup.html"
  },
  
  "background": {
    "scripts": [
      "objects/StacheItBackground.js",
      "objects/StacheItParser.js",
      "background.js"
    ]
  },
  
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "http://*/*",
    "contextMenus",
    "webRequest",
    "webRequestBlocking"
  ],
    
  "externally_connectable": {
    "matches": [
      "*://*.zonejm.com/*",
      "*://*.rpibookswap.com/*"
    ]
  },
  
  "icons": {
    "16": "media/icon-16.png",
    "48": "media/icon-48.png",
    "128": "media/icon-128.png"
  }
}